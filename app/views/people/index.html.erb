<h1 class="centered">Water Wars</h1>

<table class="centered">
  <tr>
    <th>Name</th>
    <th>Drank</th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td id="drank-<%= person.id %>"><%= person.drank %></td>
    <td>
      <%= form_tag add_drink_person_path(person), :method => :put do |f| -%>
        <%= submit_tag "Drank" %>
      <%- end -%>
    </td>
    <td>
      <%= form_tag reset_drank_person_path(person), :method => :put do |f| -%>
        <%= submit_tag "Reset" %>
      <%- end -%>
    </td>
  </tr>
<% end %>
</table>
